	<munit:test name="mu-sftp-to-sfdc-files-tansfer-api-test-suite-mu-sftp-to-sfdc-files-tansfer-apiFlowTest" doc:id="068cde2c-83be-4b02-8a8a-f8aab36537de" description="Test">
		<munit:behavior >
			<set-variable value="0" doc:name="Set Variable" doc:id="e01c76e4-61ac-4429-a253-8084c674eb6e" variableName="countImageFile"/>
			<set-variable value="1" doc:name="Set Variable" doc:id="119a9d4d-c4fc-44af-b97d-9e16d392e91d" variableName="countXmlFile"/>
			<set-variable value="1" doc:name="Set Variable" doc:id="dceded9c-c543-4c60-8268-1eee195aa164" variableName="countPdfFile"/>
			<set-variable value="doc1" doc:name="Set Variable" doc:id="99e84c40-5c5c-4e6d-93bc-9f8bb9773457" variableName="fileName"/>
			<munit-tools:mock-when doc:name="Mock sftp list" doc:id="7b6597aa-75db-40d5-806f-116f26e8b2ba" processor="sftp:list">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="List the files from source directory" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[MunitTools::getResourceAsString('sftp-list.json')]" mediaType="application/json" />
					<munit-tools:attributes value='#[{"fileName" : "doc1"&#10;}]' mediaType="application/json" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
