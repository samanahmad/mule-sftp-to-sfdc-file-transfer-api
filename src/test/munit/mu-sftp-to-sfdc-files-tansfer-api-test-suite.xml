				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Extract each zipped file" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[MunitTools::getResourceAsString('extract-file.json')]" mediaType="application/json" />
					<munit-tools:variables >
						<munit-tools:variable key="fileName" value="#['doc1']" />
					</munit-tools:variables>
				</munit-tools:then-return>
			</munit-tools:mock-when>
			<munit-tools:mock-when doc:name="Mock sftp:delete" doc:id="64790ebd-9e10-495b-be85-eb653ba392ca" processor="sftp:delete">
				<munit-tools:with-attributes >
